{
  
  "extends": "./node_modules/expo/tsconfig.base.json",

  "compilerOptions": {
    "jsx": "react-native",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // Keep strict checks everywhere …
    "strict": true,

    // … but allow JS modules with implicit any
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "noImplicitAny": false,

    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["expo-router"],
    "paths": {
      "@/*": ["./*"]
    }
  },

  // Include both TS(X) and JS files, plus your declaration file (if you add one)
  "include": [
    "app/**/*",
    "hooks/**/*",
    "contexts/**/*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
